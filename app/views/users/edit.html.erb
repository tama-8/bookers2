<main>
<dev class = "conteiner">
  <div class="row">
    <div class ="col-sm-12 col-md-8 col-lg-sm-0 mx-auto
    ">

    <h1>User info</h1>

    <% if @user.errors.any? %>
  <%= @user.errors.count %> errors prohibited this obj from being saved:
  <ul>
    <% @user.errors.full_messages.each do |message| %>
      <li><%= message %></li>
    <% end %>
  </ul>
<% end %>

    <%= form_with model: @user do |f| %>
      <div class="field">
        <%= f.label :name %><br>
        <%= f.text_field :name %>
      </div>

       <div class="field">
          <%= f.label :image %><br>
          <%= f.file_field :profile_image %>
      </div>

      <div class="field">
        <%= f.label :introduction %><br>
        <%= f.text_area :introduction %>
      </div>

      <div class="actions">
        <%= f.submit "Update User",class: "bg-dark text-white"  %>
      </div>

    <% end %>
    </div>
  </div>
</dev>
</main>